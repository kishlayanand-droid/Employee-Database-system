<%- include('partials/header') -%>    
    
    <div class="search-emp">
      <h2>Search Employee</h2>
      <form action="/employee" method="get">
        <input type="text" placeholder="Name" name="name" required>
        <input type="submit" value="Search Employee">
      </form>
    </div>

    <% if(empschema) { %>
    <div class="searchtable-container">
      <h2>Search Results:</h2>
        <table id="searchemployee-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Designation</th>
                <th>Salary</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= empschema.name %></td>
                <td><%= empschema.designation %></td>
                <td>$<%= empschema.salary %></td>
              </tr>
            </tbody>
          </table>
    </div>

    <% } else if (empschema !='') { %>
    <div class="red-message">
      Employee doesn't exist with this name.
    </div>
    <% } %>

<%- include('partials/footer') -%>    
